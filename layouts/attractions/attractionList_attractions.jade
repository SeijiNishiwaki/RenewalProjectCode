mixin renderAttraction(attraction)
	.row
		.col-lg-offset-1.col-md-offset-1.col-sm-offset-1.col-xs-offset-1.col-lg-5.col-md-5.col-sm-5.col-xs-5
			img(src=resizeCloudinaryUrl(attraction.attractionListPhoto.picture.url,368,335))
		.col-lg-5.col-md-5.col-sm-5.col-xs-5
			h3 #{attraction.attractionInfos[0].content}
			a(href = "attraction?attractionId="+ attraction._id + languageIso)
				p Read More
	.row.rowSeparator17
		.col-lg-offset-6.col-md-offset-6.col-sm-offset-6.col-xs-offset-6.col-lg-5.col-md-5.col-sm-5.col-xs-5
			hr


if data.attractions.length
	-var i = 1
	while i < data.attractions.length
		+renderAttraction(data.attractions[i])
		-i++

